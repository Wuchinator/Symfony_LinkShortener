{% extends 'base.html.twig' %}

{% block title %}Добавить ссылку{% endblock %}

{% block body %}
    <h1 class="mb-4">Создание новой ссылки</h1>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.fullUrl) }}
                {{ form_widget(form.fullUrl, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.fullUrl) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.isOneTime, { 'attr': {'class': 'form-check-input'} }) }}
                {{ form_label(form.isOneTime, null, { 'label_attr': {'class': 'form-check-label'} }) }}
                {{ form_errors(form.isOneTime) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.expiresAt) }}
                {{ form_widget(form.expiresAt, { 'attr': {'class': 'form-control', 'type': 'datetime-local'} }) }}
                {{ form_errors(form.expiresAt) }}
            </div>

            <button class="btn btn-primary">Создать</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
